module nicer
begin
type
   intfunc = function(n: integer) : integer;
   string = array of char;
var f: integer;
procedure eval(prompt: string; f: intfunc; val: integer);
begin
	writeString(prompt);
	writeString('('); writeInteger(val); writeString(')=');
	writeInteger(f(val));
	writeString("\n")
end;
